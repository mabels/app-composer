{
  "name": "@app-composer/api",
  "version": "2.0.1",
  "description": "app composer interface component",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "typings": "lib/index.d.ts",
  "bin": {
    "app-composer": "./bin/app-composer"
  },
  "scripts": {
    "clean": "rimraf lib esm",
    "start": "yarn && yarn test",
    "build": "yarn build:commonjs && yarn build:esm",
    "build:commonjs": "tsc --project .",
    "build:esm": "tsc --project . --outdir esm --module esnext",
    "test": "jest -c jest.unit.js",
    "test:integration": "jest -c jest.integration.js",
    "lint": "tslint --project .",
    "prerelease": "git checkout 2.x && git pull --ff-only origin 2.x && yarn && yarn clean && yarn lint && yarn test && yarn build",
    "release": "standard-version",
    "postrelease": "git push --follow-tags origin 2.x && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "mabels/app-composer"
  },
  "license": "AFL-2.0",
  "bugs": {
    "url": "https://github.com/mabels/app-composer/issues"
  },
  "homepage": "https://github.com/mabels/app-composer#readme",
  "devDependencies": {
    "@app-composer/types": "^2.0.0",
    "@types/jest": "23.3.10",
    "@types/yargs": "^11.0.0",
    "@types/globby": "^6.1.0",
    "@types/express": "^4.11.1",
    "@types/chokidar": "^1.7.5",
    "@types/execa": "^0.8.1",
    "@types/mkdirp": "^0.5.2",
    "@types/rimraf": "^2.0.2",
    "@types/uuid": "^3.4.3",
    "@types/node": "^10.12.12",
    "@types/mock-fs": "^3.6.30",
    "@types/semver": "^5.5.0",
    "@types/shell-quote": "^1.6.0",
    "@types/shelljs": "^0.8.1",
    "mock-fs": "4.7.0",
    "typescript": "^3.2.2",
    "husky": "1.2.0",
    "jest": "23.6.0",
    "jest-cli": "23.6.0",
    "lint-staged": "8.1.0",
    "prettier": "1.15.3",
    "standard-version": "4.4.0",
    "ts-jest": "23.10.5",
    "ts-loader": "5.3.1",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.17.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "semanticPrefix": "chore:",
    "devDependencies": {
      "automerge": true
    },
    "packageRules": [
      {
        "packagePatterns": [
          "@types/"
        ],
        "automerge": true
      }
    ]
  },
  "dependencies": {
    "chokidar": "^2.0.4",
    "execa": "^0.9.0",
    "express": "^4.16.2",
    "globby": "^8.0.1",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.6.2",
    "tar-stream": "^1.5.5",
    "uuid": "^3.2.1",
    "shell-quote": "^1.6.1",
    "semver": "^5.6.0",
    "shelljs": "^0.8.3",
    "yargs": "^11.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
